<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLinerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Столовая &quot;Рога и копыта&quot;"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#D67777"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="410dp"
        android:minHeight="410dp"
        app:srcCompat="@drawable/pig" />

    <Button
        android:id="@+id/mainButtonOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/purple_500"
        android:minHeight="48dp"
        android:text="Заказы"
        android:textColor="#263238" />

    <Button
        android:id="@+id/mainButtonLunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/purple_500"
        android:minHeight="48dp"
        android:text="Обеды"
        android:textColor="#263238" />

    <Button
        android:id="@+id/mainButtonCutlery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/purple_500"
        android:minHeight="48dp"
        android:text="Столовые приборы"
        android:textColor="#263238" />

    <Button
        android:id="@+id/mainButtonReports"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="@color/purple_500"
        android:minHeight="48dp"
        android:text="Отчеты"
        android:textColor="#263238" />

</LinearLayout>